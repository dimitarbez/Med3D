<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<div class="container">
	<h1 class="text-center mt-4">Edit post</h1>
	<div class="row justify-content-center">
		<form method="POST" action="/posts/<%= post._id %>?_method=PUT" class="col-md-8 col-10">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" class="form-control mb-2" id="title" aria-describedby="title" name="post[title]" value="<%= post.title %>" />
				<label for="description">Description</label>
				<textarea name="post[description]" class="form-control" id="description" cols="30" rows="10"><%- post.description %></textarea>
			</div>
			<hr />
			<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>  