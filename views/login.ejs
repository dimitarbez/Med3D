<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container">
  <h1 class="text-center mt-4 mb-4">Welcome to AugmentX</h1>
  <div class="row">
    <form method="POST" action="/login" style="margin: 0 auto;" class="col-10 col-sm-8 col-md-5 col-lg-3">
      <div class="form-group">
        <label for="username">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          aria-describedby="username"
          name="username"
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>
<div style="position: fixed; bottom: 0; width: 100%; text-align: center;">
  <p class="lead">Developed By Team 33</p>
</div>
<%- include("partials/footer") %>
