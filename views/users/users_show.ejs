<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 col-8 mb-5">
      <div class="card" style="width: 100%;">
        <img src="https://firebasestorage.googleapis.com/v0/b/eduar-5dcad.appspot.com/o/images%2F<%= user._id %>%2F<%= user.uuid %>%2F<%= user.profilepic %>?alt=media&token=<%= user.uuid %>" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= user.fullname %></h5>
          <p class="card-text"><%- user.username %></p>
          <p class="card-text"><%- user.aboutme %></p>
          <% if(currentUser && user._id.equals(currentUser._id)) { %>
            <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit profile</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>

