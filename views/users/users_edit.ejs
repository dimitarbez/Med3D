<%- include("../partials/header") %> <%- include("../partials/navbar") %>

<div class="container">
	<h1 class="text-center mt-4">Edit user</h1>
	<div class="row justify-content-center">
		<form method="POST" enctype="multipart/form-data" action="/users/<%= user._id %>?_method=PUT" class="col-md-8 col-10">
			<div class="form-group">
				<label for="fullname">Full Name</label>
                <input type="text" class="form-control mb-2" id="fullname" aria-describedby="fullname" name="user[fullname]" value="<%= user.fullname %>" />
                <label for="email">E-mail</label>
				<input type="text" class="form-control mb-2" id="email" aria-describedby="email" name="user[email]" value="<%= user.email %>" />
				<label for="aboutme">About Me</label>
				<textarea name="user[aboutme]" class="form-control" id="aboutme" cols="30" rows="10"><%- user.aboutme %></textarea>
			</div>
			<div class="custom-file">
				<input type="file" class="custom-file-input" name="profile_picture" id="image_for_model" lang="en" />
				<label class="custom-file-label" for="image_for_model">Select profile picture image</label>
			</div>
			<hr />
			<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>

<script src="/js/form_user_edit.js" type="text/javascript"></script>

<%- include("../partials/footer") %>
